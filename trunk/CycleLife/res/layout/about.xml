<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/layout_application"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="horizontal" android:paddingTop="20px">
		<ImageView android:id="@+id/image_icon" android:src="@drawable/icon"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:paddingLeft="40px" />
		<LinearLayout android:id="@+id/layout_developer"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:orientation="vertical">
			<TextView android:id="@+id/field_app_name"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="22dip" android:textColor="#FFFFFFFF"
				android:paddingRight="20dp" android:paddingLeft="20dp" />
			<LinearLayout android:id="@+id/layout_version"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:orientation="horizontal" android:paddingTop="5px"
				android:paddingLeft="20px">
				<TextView android:id="@+id/label_version"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="@string/label_version" android:typeface="serif"
					android:textSize="16dip" android:textColor="#FFFFFFFF" />
				<TextView android:id="@+id/field_version"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="" android:typeface="serif" android:textSize="16dip"
					android:textColor="#FFFFFFFF" android:paddingLeft="10px" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:id="@+id/layout_developer"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="vertical" android:paddingTop="15px"
		android:gravity="center_horizontal">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/label_developer"
			android:typeface="serif" android:textSize="14dip" android:textColor="#EEEEEEEE" />
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="18dip"
			android:textColor="#FFFFFFFF" android:text="Tobias Teunissen" />
	</LinearLayout>
	<LinearLayout android:id="@+id/layout_email"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="vertical" android:paddingTop="15px"
		android:gravity="center_horizontal">
		<TextView android:text="@string/label_email"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:typeface="serif" android:textSize="14dip" android:textColor="#EEEEEEEE" />
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="18dip"
			android:textColor="#FFFFFFFF" android:autoLink="all"
			android:linksClickable="true" android:text="info@teunito.de"/>
	</LinearLayout>
	<LinearLayout android:id="@+id/layout_homepage"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="vertical" android:paddingTop="15px"
		android:gravity="center_horizontal">
		<TextView android:text="@string/label_homepage"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:typeface="serif" android:textSize="14dip" android:textColor="#EEEEEEEE" />
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="18dip" android:textColor="#FFFFFFFF"
			android:autoLink="all" android:linksClickable="true" android:text="http://www.teunito.de"/>
	</LinearLayout>
	<LinearLayout android:id="@+id/layout_license"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:orientation="vertical" android:paddingTop="15px"
		android:gravity="center_horizontal">
		<TextView android:text="@string/label_license"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:typeface="serif" android:textSize="14dip" android:textColor="#EEEEEEEE" />
		<ScrollView android:id="@+id/scrollview_license"
			android:layout_height="fill_parent" android:layout_width="fill_parent">
			<TextView android:id="@+id/field_license"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@string/field_license" android:textSize="12dip"
				android:textColor="#FFFFFFFF" />
		</ScrollView>
	</LinearLayout>
</LinearLayout>
